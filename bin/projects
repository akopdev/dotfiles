#!/usr/bin/env bash

unset PROJECT_DIR

if [ -z "$1" ]; then
  # shellcheck disable=SC2016
  PROJECT_NAME="$(exa -D "${PROJECTS}" | fzf --preview-window 'right:70%' --preview='(bat --color=always --style=changes --paging=never --language=md "${PROJECTS}/$(echo {1})/README.md" || (clear && git --git-dir='$(echo "${PROJECTS}/{1}/.git")' log --graph --color=always --abbrev-commit)) << {}')"
  if [[ -n ${PROJECT_NAME} ]]; then
    PROJECT_DIR="${PROJECTS}/${PROJECT_NAME}"
  fi
else
  PROJECT_DIR="${PROJECTS}/${1}"
fi

if [[ -n "${PROJECT_DIR}" ]] && [ -d "${PROJECT_DIR}" ]; then
  cd "${PROJECT_DIR}" || exit && nvim
else
  cd "${PROJECTS}" || exit
fi
