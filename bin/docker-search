#!/bin/bash
if [ $# -lt 1 ]; then
cat << HELP
list public images from hub.docker.com registry.

Usage:
  docker-search [IMAGE NAME]

HELP
return 
fi

export FZF_DEFAULT_OPTS="--ansi --exit-0 --reverse --preview-window wrap"

get_docker_image_tags() {
  tags=$(wget -q https://registry.hub.docker.com/v1/repositories/${1}/tags -O -  | sed -e 's/[][]//g' -e 's/"//g' -e 's/ //g' | tr '}' '\n'  | awk -F: '{print $3}')

  if [ -n "$2" ]; then
    tags=$(echo "${tags}" | grep "$2")
  fi

  echo "${tags}"
}

image=$(docker search --format '{{.Name}}' $1 | fzf  --header "Search results for: $1")

if [[ ! -z "${image}" ]]; then
  tag=$(get_docker_image_tags ${image} | fzf)

  if [[ ! -z "${tag}" ]]; then
    echo "${image}:${tag}" | xclip -selection clipboard -r
    echo "${image}:${tag} was copied to clipboard"
  fi
fi
