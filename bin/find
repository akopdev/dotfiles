#!/bin/zsh
if [ ! "$#" -gt 0 ]; then
  echo "Need a string to search for!";
  return 1;
fi
rg  \
--column \
--line-number \
--no-column \
--no-heading \
--fixed-strings \
--ignore-case \
--hidden \
--follow \
--glob '!.git/*' "$1" \
| awk -F  ':' '/1/ {start = $2<5 ? 0 : $2 - 5; end = $2 + 5; print $1 " " $2 " " start ":" end}' \
| fzf --ansi --header "Search for: $1" --reverse --preview 'bat --theme=ansi --wrap character --color always {1} --highlight-line {2} --line-range {3}' --preview-window wrap \
| awk -F ' ' '{print $1}' \
| xargs nvim 
